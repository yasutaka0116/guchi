<div class="wrap">
  <div class="detail">
    <div class="detail-body">
      <div class="float">
        <div class="detail-avatar">
          <div class="avatar-center">
            <!-- <img src="assets/images.jpg" alt="no image" class="img-circle"  width="140px" height="140px"> -->
            <%= image_tag(@request.user.image, :class=>"img-circle", :alt => "no image", :size => "140x140") %>
          </div>
        </div>
        <div class="meeting-date">
          <P><%= @request.date %></P>
          <p><%= @request.state %></p>
          <p><%= @request.address %></p>
        </div>
      </div>
      <div class="meeting-message">
        <p><%= @request.accepts.count %></p>
      </div>
      <div class="meeting-request">
        <%=  form_for @accept do |f|%>
          <%= f.label :message, "リクエスト" %>
          <%= f.text_area :message, size: "250x4" %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :request_id, value: @request.id %>
          <%= f.hidden_field :flag, value: 0 %>
        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
