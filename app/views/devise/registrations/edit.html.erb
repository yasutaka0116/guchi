<% provide(:title, "ユーザー編集") %>
<main>
  <div class="l-user-area">
    <div class="user-container">
      <div class="l-user-field">
        <h2>ユーザー編集</h2>
      </div>
      <br />
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="l-user-field">
        <%= f.label :email %>
        <br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.label :password %>
        <em class="needinput">*変更しない場合空欄にしてください)</em>
         <% if @minimum_password_length %>
          <br />
         <em >(<%= @minimum_password_length %>文字以上にしてください)</em>
        <% end %>
        <br />
        <%= f.password_field :password, autocomplete: "off" %>
       </div>
       <br />
      <div class="l-user-field">
        <%= f.label :password_confirmation %>
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.label :current_password, '現在のパスワード' %>
        <em class="needinput">*編集する場合パスワードは必須です</em>
        <br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "off"  %>
      </div>
      <br />
      <div class="l-user-field">
      <%= f.label :age %><br />
      <%= f.select :age, options_for_select(1..100), {}, { autofocus: 'true'} %>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.label :gender %>
        <em class="needinput">*</em>
        <div style="display: inline;">
          <%= f.label :gender, "男",style: 'display:inline;' %>
          <%= f.radio_button :gender, "男" %>
        </div>
        <div style="display:inline;">
          <%= f.label :gender, "女",style: 'display:inline;' %>
          <%= f.radio_button :gender, "女" %>
        </div>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction, autocomplete: "off" ,cols:"150", row:"2" %>
      </div>
      <br />
      <div class="l-user-field">
      <%=f.label :image,"ユーザー画像" %>
          <%= f.file_field :image %>
      </div>
      <br />
      <div class="l-user-field">
        <%= f.submit "更新" %>
      </div>
      <br />
      <% end %>
      <div class="l-user-field delete">
        <p><%= button_to "退会", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</main>
